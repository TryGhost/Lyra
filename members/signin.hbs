{{!< ../default}}

<header class="site-header">
    {{> site-header}}
</header>
<main id="site-main" class="site-main site-signin outer">
    <div class="inner">

    {{#if @member}}

        {{!-- Logged in: Redirect home --}}
        <script>window.location = '{{@site.url}}';</script>

    {{else}}

        {{!-- Not logged in: Signin form --}}
        <form class="signin-form" data-members-form="signin">
            <h1 class="signin-title">{{t "Welcome back!"}}</h1>
            <p>{{t "Sign into your account again for full access"}}</p>
            <div class="signin-box">
                <input data-members-email type="email" placeholder="{{t "Your email address"}}" required="true" autocomplete="false" />
                <button class="button primary" type="submit">
                    <span class="button-content">{{t "Send login link"}}</span>
                    <span class="button-loader">{{> "icons/loader"}}</span>
                </button>
            </div>
            <p>{{{t "<small>Don't have an account yet? <a href='{siteurl}/signup/'>Sign up</a></small>" siteurl=@site.url}}}</p>
            <div class="message-success">{{{t "<strong>Great!</strong> Check your inbox and click the link to complete signin"}}}</div>
            <div class="message-error">{{t "Please enter a valid email address!"}}</div>
        </form>

    {{/if}}

    </div>
</main>
